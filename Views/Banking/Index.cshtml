@model BankingSystem.Models.ApplicationUser

<h2>Account Summary</h2>
<p>Username: @Model.UserName</p>
<p>Balance: @Model.Balance</p>

<h3>Transaction History</h3>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
                <tr>
                    <td>@transaction.Date</td>
                    <td>@transaction.Type</td>
                    <td>@transaction.Amount</td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Deposit" asp-route-id="@Model.Id">Deposit</a> |
<a asp-action="Withdraw" asp-route-id="@Model.Id">Withdraw</a> |
<a asp-action="CheckBalance" asp-route-id="@Model.Id">Check Balance</a>
