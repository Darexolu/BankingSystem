@model IndexViewModel

<h2>Welcome, <span class="text-danger">@Model.FirstName @Model.LastName!</span></h2>

<p>Your Account Summary:</p>
<ul>
    <li>Account Number: @Model.AccountNumber</li>
    <li>Account Balance: @Model.Balance</li>
</ul>

<h3>Recent Transactions:</h3>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Transaction Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.RecentTransactions)
        {
            <tr>
                <td>@transaction.Date</td>
                 <td>@transaction.TransactionTypeString</td>
                <td>@transaction.Amount</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Deposit" >Deposit</a> |
<a asp-action="Withdraw" >Withdraw</a> |
<a asp-action="CheckBalance" >Check Balance</a>
