<h2>Deposit</h2>

<form asp-action="Deposit" method="post">
          <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        <label for="depositAmount">Amount to Deposit</label>
        <input type="number" step="0.01" id="depositAmount" name="depositAmount" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Deposit</button>
</form>

@{
    // Display the deposited amount if it exists in ViewData
    var depositAmount = ViewData["DepositAmount"] as decimal?;
    if (depositAmount.HasValue)
    {
        <div class="alert alert-success">
            Deposit Amount: @depositAmount
        </div>
    }
}
